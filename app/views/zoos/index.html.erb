<div class="zoo has-background-primary">
  <% Cage.all.each do |cage| %>
    <%= link_to cages_path(id: cage.id) do %>
      <div class="cage has-background-primary-light">
        <div class="bar"></div><div class="bar"></div><div class="bar"></div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="hidden">
  <%= simple_form_for(Cage.new) do |f| %>
    <%= f.input :name %>
    <%= f.submit %>
  <% end %>
</div>